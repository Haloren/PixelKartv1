<h1> Review <%= @review.kart.name %> </h1>

<%= form_for(@review) do |f|%>

    <%= f.collection_select :rating, Review::RATING, :to_i, :to_i, include_blank: "Rate from 1-4" %>
    <%= f.text_area :content, placeholder: "Type your review here...." %>

    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :kart_id %>
    
    <%= f.submit %>
<% end %>

<hr>